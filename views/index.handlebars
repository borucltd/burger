<div class="row">

  <!-- LEFT -->
  <div class="column">

    <h1>On the plate:</h1>

    
      {{#each burgers}}
          {{> burgers/burger-block}}
      {{/each}}
    
  </div>

  <!-- MIDDLE -->
  <div class="column">

    <h1>Eat-Da-Burger!</h1>
    <img src="/assets/img/burger.png" alt="Yummy"></img>

    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger model:</label>
        <input id="newburger" type="text" name="name">
      </div>

      <button class="submit_button" type="submit">Submit</button>

      <h3>Enter a burger you want to eat. Click the "Submit" button.</h3>

    </form>
  </div>
  
  <!-- RIGHT -->
  <div class="column">

    <h1>Eaten:</h1>

  </div>

</div>






